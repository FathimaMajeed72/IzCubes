<%- include("../../views/partials/user/header") %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f5f5f5;
      padding: 30px;
      color: #333;
    }

    .checkout-container {
      max-width: 1100px;
      margin: auto;
      display: flex;
      gap: 30px;
      flex-wrap: wrap;
    }

    .left-section, .right-section {
      background: #fff;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .left-section {
      flex: 2;
    }

    .right-section {
      flex: 1;
      min-width: 300px;
    }

    h3 {
      margin-bottom: 15px;
      color: #007185;
    }

    .address-box, .order-box {
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 20px;
      position: relative;
    }

    .address-box input[type="radio"] {
      margin-right: 10px;
    }

    .address-box .edit-btn {
      position: absolute;
      top: 15px;
      right: 15px;
      border: 1px solid #888;
      background: transparent;
      padding: 4px 10px;
      font-size: 14px;
      border-radius: 4px;
      cursor: pointer;
    }

    .add-address-btn {
      background-color: #007b5e;
      color: #fff;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
      margin-bottom: 30px;
    }

    .order-box img {
      width: 60px;
      height: auto;
      border-radius: 5px;
      margin-right: 15px;
    }

    .order-item {
      display: flex;
      align-items: center;
    }

    .price-details, .payment-methods {
      margin-bottom: 25px;
    }

    .price-details div, .payment-methods label {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
    }

    .total {
      font-weight: bold;
      font-size: 18px;
      border-top: 1px solid #ddd;
      padding-top: 10px;
    }

    .apply-coupon {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    .apply-coupon input {
      flex: 1;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .apply-coupon button {
      background-color: #28a745;
      color: #fff;
      border: none;
      padding: 8px 12px;
      border-radius: 5px;
      cursor: pointer;
    }

    .payment-methods input {
      margin-right: 8px;
    }

    .razorpay-logo {
      width: 100px;
      margin-top: 10px;
    }
  </style>


<div class="checkout-container">
  <!-- Left Section -->
  <div class="left-section">
    <h3>Shipping Address</h3>
    <div class="address-box">
      <input type="radio" name="address" checked>
      <strong>Work</strong> &nbsp; <span style="font-weight: bold;">ASD</span><br>
      6282146675<br>
      asdasds mukunneri kadakkal, kollam, Kerala - <strong>691536</strong>
      <button class="edit-btn">Edit</button>
    </div>
    <button class="add-address-btn">+ Add New Address</button>

    <h3>Order Summary</h3>
    <div class="order-box">
      <div class="order-item">
        <img src="https://via.placeholder.com/60" alt="Product">
        <div>
          <strong>Brahmins Broken Rice 500Gm</strong><br>
          Qty: 1<br>
          Price: ₹124<br>
          <strong>Item Total: ₹124</strong>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Section -->
  <div class="right-section">
    <h3>Price Details</h3>
    <div class="price-details">
      <div><span>Subtotal</span><span>₹124</span></div>
      <div><span>Discount</span><span>- ₹0</span></div>
      <div><span>Shipping</span><span>₹40</span></div>
      <div class="total"><span>Total</span><span>₹164</span></div>
    </div>

    <div class="apply-coupon">
      <input type="text" placeholder="Enter Coupon Code">
      <button>Apply Coupon</button>
    </div>

    <h3>Select Payment Method</h3>
    <div class="payment-methods">
      <label><input type="radio" name="payment" checked> Credit Card</label>
      <label><input type="radio" name="payment"> PayPal</label>
      <label><input type="radio" name="payment"> Cash on Delivery</label>
      <label><input type="radio" name="payment"> Razorpay</label>
      <img src="https://seeklogo.com/images/R/razorpay-logo-78E180B23D-seeklogo.com.png" class="razorpay-logo" alt="Razorpay Logo">
    </div>
  </div>
</div>


<%- include("../../views/partials/user/footer") %>