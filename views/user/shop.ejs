<%- include("../../views/partials/user/header") %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">


<style>
    /* General Layout */
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        background-color: #fafbfc;
        color: #1a1d29;
        line-height: 1.6;
        margin: 0;
        padding: 0;
    }

    .main-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    /* Shop Header */
    .shop-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 30px 0;
        margin-bottom: 40px;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    }

    .shop-topbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
        color: white;
        padding: 0 30px;
    }

    .shop-title {
        font-size: 32px;
        font-weight: 700;
        color: white;
        margin: 0;
    }

    /* Search Form */
    .search-form {
        display: flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 50px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        min-width: 300px;
    }

    .search-input {
        flex: 1;
        padding: 12px 20px;
        font-size: 15px;
        border: none;
        outline: none;
        background: transparent;
        color: #1a1d29;
    }

    .search-input::placeholder {
        color: #6c757d;
    }

    .search-button {
        padding: 12px 24px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        cursor: pointer;
        font-size: 14px;
        font-weight: 600;
        transition: transform 0.3s ease;
    }

    .search-button:hover {
        transform: translateY(-1px);
    }

    /* Sort Dropdown */
    .sort-section {
        background: white;
        padding: 20px 30px;
        border-radius: 16px;
        margin-bottom: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .sort-dropdown {
        display: flex;
        align-items: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .sort-dropdown h6 {
        margin: 0;
        font-size: 18px;
        font-weight: 600;
        color: #2d3748;
    }

    .sort-dropdown .dropdown {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
    }

    .sort-dropdown .dropdown a {
        text-decoration: none;
        color: #4a5568;
        padding: 8px 16px;
        border-radius: 20px;
        background: #f7fafc;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .sort-dropdown .dropdown a:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        transform: translateY(-2px);
    }

    /* Main Content Layout */
    .shop-content {
        display: flex;
        gap: 30px;
        align-items: flex-start;
    }

    /* Sidebar */
    .sidebar {
        width: 320px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        padding: 30px;
        position: sticky;
        top: 20px;
        flex-shrink: 0;
    }

    .filter-section {
        margin-bottom: 32px;
        padding-bottom: 24px;
        border-bottom: 1px solid #e2e8f0;
    }

    .filter-section:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }

    .filter-title {
        font-size: 20px;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .filter-title i {
        color: #667eea;
    }

    .filter-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .filter-item {
        margin-bottom: 8px;
    }

    .filter-item a {
        text-decoration: none;
        color: #4a5568;
        font-size: 15px;
        padding: 8px 12px;
        border-radius: 8px;
        display: block;
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }

    .filter-item a:hover {
        background: #f7fafc;
        color: #667eea;
        border-color: #e2e8f0;
        transform: translateX(4px);
    }

    /* Price Filter */
    .price-filter {
        background: linear-gradient(135deg, #f8f9ff 0%, #e3e7ff 100%);
        padding: 24px;
        border-radius: 16px;
        margin-top: 24px;
    }

    .price-options {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .price-button {
        padding: 14px 20px;
        background: white;
        color: #4a5568;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        display: block;
    }

    .price-button:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    /* Product Grid */
    .product-grid-container {
        flex: 1;
        min-width: 0;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
        margin-bottom: 40px;
    }

    /* Product Cards */
    .product-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.4s ease;
        position: relative;
        border: 1px solid transparent;
    }

    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        border-color: #e2e8f0;
    }

    .product-image-container {
        position: relative;
        overflow: hidden;
        height: 280px;
        background: #f8f9fa;
    }

    .product-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .product-card:hover img {
        transform: scale(1.1);
    }

    .wishlist-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        background: rgba(255, 255, 255, 0.95);
        color: #fc8181;
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    .wishlist-btn:hover {
        background: white;
        color: #f56565;
        transform: scale(1.1);
    }

    .product-info {
        padding: 24px;
    }

    .product-name {
        font-size: 16px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 8px;
        line-height: 1.4;
        text-decoration: none;
        display: block;
    }

    .product-name:hover {
        color: #667eea;
    }

    .product-brand {
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 12px;
        font-weight: 500;
    }

    .product-price {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 16px;
        flex-wrap: wrap;
    }

    .current-price {
        font-size: 20px;
        font-weight: 700;
        color: #667eea;
    }

    .original-price {
        font-size: 16px;
        color: #a0aec0;
        text-decoration: line-through;
    }

    .add-to-cart-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 12px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        width: 100%;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .add-to-cart-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    /* No Products Message */
    .no-products {
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .no-products i {
        font-size: 64px;
        color: #e2e8f0;
        margin-bottom: 24px;
    }

    .no-products h3 {
        font-size: 24px;
        color: #2d3748;
        margin-bottom: 12px;
    }

    .no-products p {
        color: #6c757d;
        font-size: 16px;
    }

    /* Pagination */
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 40px;
    }

    .pagination {
        display: flex;
        gap: 8px;
        background: white;
        padding: 16px 24px;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .pagination a {
        padding: 12px 16px;
        background: #f7fafc;
        border-radius: 8px;
        color: #4a5568;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        border: 1px solid #e2e8f0;
    }

    .pagination a:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        transform: translateY(-2px);
    }

    .pagination .active {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
    }

    /* Truncated Text */
    .truncated-text {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: block;
        max-width: 100%;
        cursor: pointer;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
        .shop-content {
            flex-direction: column;
        }
        
        .sidebar {
            width: 100%;
            position: static;
        }
        
        .product-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        }
    }

    @media (max-width: 768px) {
        .main-container {
            padding: 20px 10px;
        }
        
        .shop-topbar {
            flex-direction: column;
            text-align: center;
            gap: 16px;
        }
        
        .search-form {
            min-width: 100%;
        }
        
        .sort-dropdown {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }
        
        .product-grid {
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 16px;
        }
        
        .sidebar {
            padding: 20px;
        }
        
        .shop-title {
            font-size: 24px;
        }
    }

    @media (max-width: 480px) {
        .product-grid {
            grid-template-columns: 1fr;
        }
        
        .sort-dropdown .dropdown {
            flex-direction: column;
            width: 100%;
        }
        
        .sort-dropdown .dropdown a {
            text-align: center;
        }
    }


    /* Backdrop (optional) */
.modal-backdrop {
  background-color: rgba(26, 29, 41, 0.75);
  backdrop-filter: blur(6px);
}

/* Modal Dialog */
#sizeModal .modal-dialog {
  max-width: 480px;
  margin: 3rem auto;
}

/* Modal Content */
#sizeModal .modal-content {
  border: none;
  border-radius: 16px;
  background: #fff;
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
  overflow: hidden;
}

/* Modal Header */
#sizeModal .modal-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 20px 24px;
  border-bottom: none;
}

#sizeModal .modal-title {
  font-size: 18px;
  font-weight: 600;
}

#sizeModal .btn-close {
  filter: brightness(0) invert(1);
  opacity: 0.8;
}

#sizeModal .btn-close:hover {
  opacity: 1;
  transform: scale(1.1);
}

/* Modal Body */
#sizeModal .modal-body {
  padding: 24px;
  background-color: #f9fafb;
}

/* Size Options */
#sizeModal #sizeOptions {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  justify-content: center;
}

#sizeModal #sizeOptions label {
  position: relative;
  background: white;
  border: 2px solid #e2e8f0;
  border-radius: 10px;
  padding: 10px 16px;
  cursor: pointer;
  transition: 0.3s ease;
  font-size: 14px;
  font-weight: 600;
  color: #4a5568;
  min-width: 100px;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

#sizeModal #sizeOptions label:hover {
  border-color: #667eea;
  background-color: #eef2ff;
  transform: translateY(-2px);
}

#sizeModal #sizeOptions input[type="radio"] {
  position: absolute;
  opacity: 0;
  pointer-events: none;
}

/* When a radio is checked (fallback for JS-controlled highlight) */
#sizeModal #sizeOptions input[type="radio"]:checked + label,
#sizeModal #sizeOptions label:has(input[type="radio"]:checked) {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-color: transparent;
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
}

/* Modal Footer */
#sizeModal .modal-footer {
  padding: 16px 24px;
  background-color: #fff;
  border-top: 1px solid #e2e8f0;
}

#sizeModal .btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  padding: 10px 24px;
  font-weight: 600;
  border-radius: 10px;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

#sizeModal .btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 18px rgba(102, 126, 234, 0.4);
}

/* Responsive */
@media (max-width: 768px) {
  #sizeModal .modal-dialog {
    margin: 1rem;
    max-width: 100%;
  }

  #sizeModal #sizeOptions label {
    min-width: 80px;
    font-size: 13px;
    padding: 8px 12px;
  }
}

</style>

<div class="main-container">
    <!-- Shop Header -->
    <div class="shop-header">
        <div class="shop-topbar">
            <h1 class="shop-title">
                <i class="fas fa-store me-3"></i>Our Shop
            </h1>
            <div class="search-bar">
                <form action="/shop" method="GET" class="search-form">
                    <input type="text" name="search" value="<%= search || '' %>" placeholder="Search for products..." class="search-input" />
                    <% if (selectedCategory) { %>
                        <input type="hidden" name="category" value="<%= selectedCategory %>">
                    <% } %>
                    <% if (selectedBrand) { %>
                        <input type="hidden" name="brand" value="<%= selectedBrand %>">
                    <% } %>
                    <% if (priceGreaterThan) { %>
                        <input type="hidden" name="gt" value="<%= priceGreaterThan %>">
                    <% } %>
                    <% if (priceLesserThan) { %>
                        <input type="hidden" name="lt" value="<%= priceLesserThan %>">
                    <% } %>
                    <% if (sortType) { %>
                        <input type="hidden" name="sortType" value="<%= sortType %>">
                    <% } %>
                    <button type="submit" class="search-button">
                        <i class="fas fa-search me-2"></i>Search
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Sort Section -->
    <div class="sort-section">
        <div class="sort-dropdown">
            <h6><i class="fas fa-sort me-2"></i>Sort by:</h6>
            <ul class="dropdown">
                <li><a href="/shop?sortType=lowToHigh<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %><% if (search) { %>&search=<%= search %><% } %><% if (priceGreaterThan) { %>&gt=<%= priceGreaterThan %><% } %><% if (priceLesserThan) { %>&lt=<%= priceLesserThan %><% } %>">
                    <i class="fas fa-arrow-up me-1"></i>Price: Low to High
                </a></li>
                <li><a href="/shop?sortType=highToLow<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %><% if (search) { %>&search=<%= search %><% } %><% if (priceGreaterThan) { %>&gt=<%= priceGreaterThan %><% } %><% if (priceLesserThan) { %>&lt=<%= priceLesserThan %><% } %>">
                    <i class="fas fa-arrow-down me-1"></i>Price: High to Low
                </a></li>
                <li><a href="/shop?sortType=AaToZz<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %><% if (search) { %>&search=<%= search %><% } %><% if (priceGreaterThan) { %>&gt=<%= priceGreaterThan %><% } %><% if (priceLesserThan) { %>&lt=<%= priceLesserThan %><% } %>">
                    <i class="fas fa-sort-alpha-down me-1"></i>Name: A-Z
                </a></li>
                <li><a href="/shop?sortType=ZzToAa<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %><% if (search) { %>&search=<%= search %><% } %><% if (priceGreaterThan) { %>&gt=<%= priceGreaterThan %><% } %><% if (priceLesserThan) { %>&lt=<%= priceLesserThan %><% } %>">
                    <i class="fas fa-sort-alpha-up me-1"></i>Name: Z-A
                </a></li>
            </ul>
        </div>
    </div>

    <!-- Main Content -->
    <div class="shop-content">
        <!-- Sidebar -->
        <aside class="sidebar">
            <!-- Categories Filter -->
            <div class="filter-section">
                <div class="filter-title">
                    <i class="fas fa-tags"></i>
                    Categories
                </div>
                <ul class="filter-list">
                    <% for(let i = 0; i < category.length; i++) { %>
                        <li class="filter-item">
                            <a href="/shop?category=<%= category[i]._id %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %>">
                                <%= category[i].name %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>

            <!-- Brands Filter -->
            <div class="filter-section">
                <div class="filter-title">
                    <i class="fas fa-star"></i>
                    Brands
                </div>
                <ul class="filter-list">
                    <% for(let i = 0; i < brand.length; i++) { %>
                        <li class="filter-item">
                            <a href="/shop?brand=<%= brand[i]._id %><% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %>">
                                <%= brand[i].brandName %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>

            <!-- Price Filter -->
            <div class="filter-section">
                <div class="filter-title">
                    <i class="fas fa-rupee-sign"></i>
                    Filter by Price
                </div>
                <div class="price-filter">
                    <div class="price-options">
                        <a href="/shop?gt=0&lt=500<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %>" class="price-button">
                            Under ₹500
                        </a>
                        <a href="/shop?gt=500&lt=1000<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %>" class="price-button">
                            ₹501 - ₹1000
                        </a>
                        <a href="/shop?gt=1000&lt=1500<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %>" class="price-button">
                            ₹1001 - ₹1500
                        </a>
                        <a href="/shop?gt=1500&lt=1000000<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %>" class="price-button">
                            Above ₹1500
                        </a>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Product Grid -->
        <div class="product-grid-container">
            <% if (products && products.length > 0) { %>
                <div class="product-grid">
                    <% for(let i = 0; i < products.length; i++) { %>
                        <div class="product-card">
                            <div class="product-image-container">
                                <a href="/productdetails?id=<%= products[i]._id %>&from=shop">
                                    <img src="/uploads/re-image/<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>" />
                                </a>
                                <button class="wishlist-btn" onclick="addToWishlist('<%= products[i]._id %>',this)" aria-label="Toggle wishlist">
                                     <i class="<%= user.wishlist.includes(products[i]._id.toString()) ? 'fas text-danger' : 'far' %> fa-heart"></i>
                                </button>
                            </div>
                            
                            <div class="product-info">
                                <a href="/productdetails?id=<%= products[i]._id %>&from=shop" class="product-name truncated-text" title="<%= products[i].productName %>">
                                    <%= products[i].productName %>
                                </a>
                                
                                <div class="product-brand">
                                    <i class="fas fa-tag me-1"></i>Brand: <%= products[i].brand %>
                                </div>
                                
                                <div class="product-price">
                                    <span class="current-price">₹<%= products[i].salePrice.toLocaleString('en-IN') %></span>
                                    <span class="original-price">₹<%= products[i].regularPrice.toLocaleString('en-IN') %></span>
                                </div>
                                
                                <button class="add-to-cart-btn" data-bs-toggle="modal" data-bs-target="#sizeModal" data-product-id="<%= products[i]._id %>" data-sizes='<%- JSON.stringify(products[i].sizes) %>' onclick="openSizeModal(this)">
                                    <i class="fas fa-shopping-cart"></i>
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <div class="no-products">
                    <i class="fas fa-search"></i>
                    <h3>No Products Found</h3>
                    <p>Sorry, we couldn't find any products matching your criteria. Try adjusting your filters or search terms.</p>
                </div>
            <% } %>

            <!-- Pagination -->
            <% if (products && products.length > 0) { %>
                <div class="pagination-container">
                    <div class="pagination">
                        <% if (currentPage > 1) { %>
