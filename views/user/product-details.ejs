
<%- include("../../views/partials/user/header") %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">



<style>
    /* General Layout */
body {
    font-family: 'Roboto', sans-serif;
    background-color: #f4f7fb;
    color: #495057;
    line-height: 1.6;
    margin: 0;
    padding: 0;
}

.main {
    padding: 70px 0;
}

/* Product Image Gallery */
/* .detail-gallery {
    width: 50%;
    position: relative;
} */

.product-image-zoom {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.product-image-zoom img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    object-fit: cover;
    transition: transform 0.3s ease;
}

/* Thumbnail Navigation */
.slider-nav-thumbnails {
    display: flex;
    gap: 10px;
    margin-top: 15px;
    overflow-x: auto;
}

.thumbnail {
    width: 80px;
    height: 80px;
    overflow: hidden;
    border-radius: 8px;
    cursor: pointer;
    transition: transform 0.3s ease;
}

.thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.thumbnail:hover {
    transform: scale(1.1);
}

/* Detail Information */
/* .detail-info {
    width: 50%;
    padding-left: 20px;
} */

.title-detail {
    font-size: 32px;
    font-weight: 600;
    color: #343a40;
    margin-bottom: 15px;
}

.product-detail-rating {
    /* display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px; */
    display: flex;
    align-items: center;  
    gap: 20px;  
}

.pro-details-brand {
    font-size: 16px;
    color: #6c757d;
}


.product-rate-cover {
    display: flex;
    align-items: center;
    gap: 10px; 
}

.product-rating {
    width: 90%;  
    background: #ffca28;
    height: 5px;
}

.font-small {
    font-size: 14px;
    color: #888;
}
.product-price {
    font-size: 28px;
    font-weight: bold;
    color: #007bff;
    margin-top: 20px;
}

.product-price ins {
    font-size: 30px;
    color: #e74c3c;
}

.old-price {
    text-decoration: line-through;
    color: #7f8c8d;
    margin-left: 15px;
}

.save-price {
    font-size: 16px;
    color: #27ae60;
    margin-left: 15px;
}

/* Styled Description Section */
.short-desc {
    font-size: 16px;
    color: #555;
    margin-bottom: 25px;
}

.desc-title {
    font-size: 24px;
    color: #333;
    font-weight: 600;
    margin-bottom: 15px;
}

.short-desc p {
    font-size: 16px;
    line-height: 1.7;
    color: #6c757d;
}

/* Product Extras */
.product_sort_info {
    list-style: none;
    padding: 0;
    margin-bottom: 25px;
}

.product_sort_info li {
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    font-size: 14px;
}

.product_sort_info i {
    color: #f39c12;
    margin-right: 10px;
}

.detail-qty {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 5px 10px;
    gap: 15px;
}

.qty-val {
    font-size: 18px;
    font-weight: bold;
    color: #343a40;
}

.qty-down, .qty-up {
    font-size: 20px;
    color: #007bff;
    cursor: pointer;
}

.qty-down:hover, .qty-up:hover {
    color: #0056b3;
}

.product-extra-link2 {
    display: flex;
    gap: 20px;
}

.button-add-to-cart {
    background-color: #e74c3c;
    color: #fff;
    padding: 8px 20px;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.button-add-to-cart:hover {
    background-color: #c0392b;
}

.action-btn {
    background-color: #f39c12;
    color: #fff;
    padding: 12px 20px;
    border-radius: 5px;
    font-size: 20px;
    transition: background-color 0.3s ease;
}
.action-btn i {
  font-size: 20px;
  color: white; 
}


.action-btn:hover {
    background-color: #e67e22;
}

/* Wishlist Button Styles */
.wishlist-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 10px;
    border-radius: 50%;
    color: #ff6b6b;
    font-size: 18px;
    z-index: 10;
    transition: background-color 0.3s, color 0.3s, transform 0.3s;
}

.wishlist-btn:hover {
    background-color: rgba(255, 255, 255, 1);
    color: #ff4c4c;
    transform: translateY(-2px);
}

.wishlist-btn:active {
    transform: translateY(1px);
}

/* Product Image Action Wrapper */
.product-img-action-wrap {
    position: relative;
}

/* Product Image */
.product-img {
    position: relative;
    display: block;
    overflow: hidden;
}

/* Product Cart Wrapper */
.product-cart-wrap {
    border: 1px solid #eee;
    padding: 20px;
    margin-bottom: 30px;
}

/* Product Content */
.product-content-wrap h6 {
    font-size: 18px;
    color: #333;
    margin-bottom: 5px;
}

.product-content-wrap h5 {
    font-size: 16px;
    color: #ff6b6b;
    margin-bottom: 10px;
}

.product-content-wrap a {
    display: inline-block;
    padding: 8px 12px;
    background-color: #ff6b6b;
    color: white;
    text-transform: uppercase;
    font-size: 14px;
    border-radius: 4px;
    text-decoration: none;
}

.product-content-wrap a:hover {
    background-color: #ff4c4c;
}


/* Responsive Design */
@media (max-width: 768px) {
    .detail-gallery {
        width: 100%;
        margin-bottom: 20px;
    }

    .detail-info {
        width: 100%;
    }

    .thumbnail {
        width: 60px;
        height: 60px;
    }

    .product-price {
        font-size: 24px;
    }

    .button-add-to-cart, .action-btn {
        font-size: 16px;
        padding: 10px 20px;
    }
}

</style>
<main class="main">
 <div class="page-header breadcrumb-wrap">
     <div class="container">
         <div class="breadcrumb">
            <a href="/">Home</a>
            <% if (from === 'shop') { %>
                > <a href="/shop">Shop</a>
            <% } %>
            > <span><%= product.productName %></span>
        </div>

     </div>
 </div>

<section class="mt-5 mb-5">
  <div class="container">
    <div class="row g-5">
      <!-- Left: Product Gallery -->
      <div class="col-lg-6">
        <div class="detail-gallery">
          <div class="product-img-action-wrap position-relative">
            <img id="main-image" src="/uploads/re-image/<%= product.productImage[0] %>" class="img-fluid rounded" alt="Product Image">
          </div>
          <div class="slider-nav-thumbnails d-flex mt-3">
            <% product.productImage.forEach(img => { %>
              <div class="thumbnail">
                <img src="/uploads/re-image/<%= img %>" onclick="changeMainImage('<%= img %>')" class="img-thumbnail" alt="Thumb">
              </div>
            <% }); %>
          </div>
        </div>
      </div>

      <!-- Right: Product Info -->
      <div class="col-lg-6">
        <div class="detail-info">
          <h2 class="title-detail"><%= product.productName %></h2>

          <div class="product-detail-rating mb-3">
            <div class="pro-details-brand">
              <span>Brand: <a href="#"><%= product.brand %></a></span>
            </div>
            <div class="product-rate-cover text-end">
              <div class="product-rate d-inline-block">
                <div class="product-rating" style="width: 90%;"></div>
              </div>
              <span class="font-small text-muted">(25 reviews)</span>
            </div>
          </div>

          <div class="product-price">
            <ins>₹<%= product.salePrice %></ins>
            <span class="old-price">₹<%= product.regularPrice %></span>
            <span class="save-price">
              <% if (!totalOffer) { %>
                No Offers
              <% } else { %>
                <%= totalOffer %>% Off
              <% } %>
            </span>
          </div>

          <div class="short-desc mt-4">
            <h3 class="desc-title">Product Description</h3>
            <p><%= product.description %></p>
          </div>

          <ul class="product_sort_info">
            <li><i class="fa fa-shield-alt"></i> 1 Year Brand Warranty</li>
            <li><i class="fa fa-undo-alt"></i> 30 Day Return Policy</li>
            <li><i class="fa fa-truck"></i> Cash on Delivery available</li>
          </ul>

          <div class="mt-4">
            <h5>Select Size:</h5>
            <div class="d-flex gap-3 flex-wrap">
              <% product.sizes.forEach(item => { %>
                <label class="btn btn-outline-primary <%= item.quantity === 0 ? 'disabled' : '' %>">
                  <input type="radio" name="size" value="<%= item.size %>" <%= item.quantity === 0 ? 'disabled' : '' %>> 
                  <%= item.size %> (<%= item.quantity %> available)
                </label>
              <% }) %>
            </div>
          </div>


          <div class="d-flex align-items-center gap-3 mt-4">
            <div class="detail-qty">
              <button class="btn qty-down" type="button"><i class="fas fa-minus"></i></button>
              <span class="qty-val" id="quantity">1</span>
              <button class="btn qty-up" type="button"><i class="fas fa-plus"></i></button>
            </div>
            <form action="/addToCart" method="POST" class="d-inline">
              <input type="hidden" name="productId" value="<%= product._id %>">
              <input type="hidden" name="quantity" id="cartQty" value="1">
              <input type="hidden" name="selectedSize" id="selectedSize">
              <button type="submit" class="btn button-add-to-cart">Add to Cart</button>
            </form>
            <a aria-label="Add To Wishlist" class="btn action-btn" href="#"><i class="fa-regular fa-heart"></i></a>
          </div>

          <ul class="product-meta mt-4">
            <li>Tags: <a href="#"><%= category.name %></a></li>
            <li>Availability: <span class="text-success"><%= quantity %> in stock</span></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="mt-5 mb-5">
  <div class="container">
    <div class="row mb-4">
      <div class="col-12">
        <h4 class="fw-bold">Similar Products</h4>
      </div>
    </div>
    <div class="row g-4">
      <% if (similarProducts && similarProducts.length > 0) { %>
        <% similarProducts.forEach(product => { %>
          <div class="col-md-6 col-lg-3">
            <div class="product-cart-wrap">
              <div class="product-img-action-wrap">
                <div class="product-img">
                  <a href="/productdetails?id=<%= product._id %>">
                    <img class="img-fluid" src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                  </a>
                </div>
                <a href="#" class="wishlist-btn" aria-label="Add to wishlist">
                  <i class="fas fa-heart"></i>
                </a>
              </div>
              <div class="product-content-wrap">
                <h6 class="mb-2"><%= product.productName %></h6>
                <h5>₹<%= product.salePrice %></h5>
                <a href="#" class="btn btn-sm btn-primary mt-2">Add to cart</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <p class="text-danger">No similar products found.</p>
        </div>
      <% } %>
    </div>
  </div>
</section>


</main>


<script>
    // Function to change the main image when a thumbnail is clicked
function changeMainImage(imageSrc) {
    // Update the source of the main image
    document.getElementById("main-image").src = "/uploads/re-image/" + imageSrc;
}

</script>

<script>
  document.querySelector(".qty-up").addEventListener("click", () => {
    let qty = parseInt(document.getElementById("quantity").innerText);
    document.getElementById("quantity").innerText = ++qty;
    document.getElementById("cartQty").value = qty;
  });

  document.querySelector(".qty-down").addEventListener("click", () => {
    let qty = parseInt(document.getElementById("quantity").innerText);
    if (qty > 1) {
      document.getElementById("quantity").innerText = --qty;
      document.getElementById("cartQty").value = qty;
    }
  });

  function changeMainImage(imageSrc) {
    document.getElementById("main-image").src = "/uploads/re-image/" + imageSrc;
  }

  document.querySelectorAll('input[name="size"]').forEach(radio => {
    radio.addEventListener('change', function () {
      document.getElementById('selectedSize').value = this.value;
    });
  });

  document.querySelector("form").addEventListener("submit", function(e) {
  const selectedSize = document.getElementById("selectedSize").value;
  if (!selectedSize) {
    e.preventDefault();
    alert("Please select a size before adding to cart.");
  }
});

</script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const qtyVal = document.getElementById("quantity");
    const cartQty = document.getElementById("cartQty");
    const plusBtn = document.querySelector(".qty-up");
    const minusBtn = document.querySelector(".qty-down");

    let quantity = 1;

    plusBtn.addEventListener("click", () => {
      quantity++;
      qtyVal.textContent = quantity;
      cartQty.value = quantity;
    });

    minusBtn.addEventListener("click", () => {
      if (quantity > 1) {
        quantity--;
        qtyVal.textContent = quantity;
        cartQty.value = quantity;
      }
    });
  });
</script>



