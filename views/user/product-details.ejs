
<%- include("../../views/partials/user/header") %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">



<style>
    /* General Layout */
body {
    font-family: 'Roboto', sans-serif;
    background-color: #f4f7fb;
    color: #495057;
    line-height: 1.6;
    margin: 0;
    padding: 0;
}

.main {
    padding: 70px 0;
}

/* Product Image Gallery */
/* .detail-gallery {
    width: 50%;
    position: relative;
} */

.product-image-zoom {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.product-image-zoom img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    object-fit: cover;
    transition: transform 0.3s ease;
}

/* Thumbnail Navigation */
.slider-nav-thumbnails {
    display: flex;
    gap: 10px;
    margin-top: 15px;
    overflow-x: auto;
}

.thumbnail {
    width: 80px;
    height: 80px;
    overflow: hidden;
    border-radius: 8px;
    cursor: pointer;
    transition: transform 0.3s ease;
}

.thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.thumbnail:hover {
    transform: scale(1.1);
}

/* Detail Information */
/* .detail-info {
    width: 50%;
    padding-left: 20px;
} */

.title-detail {
    font-size: 32px;
    font-weight: 600;
    color: #343a40;
    margin-bottom: 15px;
}

.product-detail-rating {
    /* display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px; */
    display: flex;
    align-items: center;  
    gap: 20px;  
}

.pro-details-brand {
    font-size: 16px;
    color: #6c757d;
}


.product-rate-cover {
    display: flex;
    align-items: center;
    gap: 10px; 
}

.product-rating {
    width: 90%;  
    background: #ffca28;
    height: 5px;
}

.font-small {
    font-size: 14px;
    color: #888;
}
.product-price {
    font-size: 28px;
    font-weight: bold;
    color: #007bff;
    margin-top: 20px;
}

.product-price ins {
    font-size: 30px;
    color: #e74c3c;
}

.old-price {
    text-decoration: line-through;
    color: #7f8c8d;
    margin-left: 15px;
}

.save-price {
    font-size: 16px;
    color: #27ae60;
    margin-left: 15px;
}

/* Styled Description Section */
.short-desc {
    font-size: 16px;
    color: #555;
    margin-bottom: 25px;
}

.desc-title {
    font-size: 24px;
    color: #333;
    font-weight: 600;
    margin-bottom: 15px;
}

.short-desc p {
    font-size: 16px;
    line-height: 1.7;
    color: #6c757d;
}

/* Product Extras */
.product_sort_info {
    list-style: none;
    padding: 0;
    margin-bottom: 25px;
}

.product_sort_info li {
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    font-size: 14px;
}

.product_sort_info i {
    color: #f39c12;
    margin-right: 10px;
}

.detail-qty {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 5px 10px;
    gap: 15px;
}

.qty-val {
    font-size: 18px;
    font-weight: bold;
    color: #343a40;
}

.qty-down, .qty-up {
    font-size: 20px;
    color: #007bff;
    cursor: pointer;
}

.qty-down:hover, .qty-up:hover {
    color: #0056b3;
}

.product-extra-link2 {
    display: flex;
    gap: 20px;
}

.button-add-to-cart {
    background-color: #e74c3c;
    color: #fff;
    padding: 8px 20px;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.button-add-to-cart:hover {
    background-color: #c0392b;
}

.action-btn {
    background-color: #f39c12;
    color: #fff;
    padding: 12px 20px;
    border-radius: 5px;
    font-size: 20px;
    transition: background-color 0.3s ease;
}
.action-btn i {
  font-size: 20px;
  color: white; 
}


.action-btn:hover {
    background-color: #e67e22;
}

/* Wishlist Button Styles */
.wishlist-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 10px;
    border-radius: 50%;
    color: #ff6b6b;
    font-size: 18px;
    z-index: 10;
    transition: background-color 0.3s, color 0.3s, transform 0.3s;
}

.wishlist-btn:hover {
    background-color: rgba(255, 255, 255, 1);
    color: #ff4c4c;
    transform: translateY(-2px);
}

.wishlist-btn:active {
    transform: translateY(1px);
}

/* Product Image Action Wrapper */
.product-img-action-wrap {
    position: relative;
}

/* Product Image */
.product-img {
    position: relative;
    display: block;
    overflow: hidden;
}

/* Product Cart Wrapper */
.product-cart-wrap {
    border: 1px solid #eee;
    padding: 20px;
    margin-bottom: 30px;
}

/* Product Content */
.product-content-wrap h6 {
    font-size: 18px;
    color: #333;
    margin-bottom: 5px;
}

.product-content-wrap h5 {
    font-size: 16px;
    color: #ff6b6b;
    margin-bottom: 10px;
}

.product-content-wrap a {
    display: inline-block;
    padding: 8px 12px;
    background-color: #ff6b6b;
    color: white;
    text-transform: uppercase;
    font-size: 14px;
    border-radius: 4px;
    text-decoration: none;
}

.product-content-wrap a:hover {
    background-color: #ff4c4c;
}


/* Responsive Design */
@media (max-width: 768px) {
    .detail-gallery {
        width: 100%;
        margin-bottom: 20px;
    }

    .detail-info {
        width: 100%;
    }

    .thumbnail {
        width: 60px;
        height: 60px;
    }

    .product-price {
        font-size: 24px;
    }

    .button-add-to-cart, .action-btn {
        font-size: 16px;
        padding: 10px 20px;
    }
}

</style>
<main class="main">
 <div class="page-header breadcrumb-wrap">
     <div class="container">
         <div class="breadcrumb">
            <a href="/">Home</a>
            <% if (from === 'shop') { %>
                > <a href="/shop">Shop</a>
            <% } %>
            > <span><%= product.productName %></span>
</div>

     </div>
 </div>
 <section class="mt-5 mb-5">
     <div class="container">
         <div class="row">
             <div class="col-lg-9">
                 <div class="product-detail accordion-detail">
                     <div class="row mb-5">
                         <div class="col-md-6 col-sm-12 col-xs-12">
                             <div class="detail-gallery">
                                 <div class="product-image-zoom">
                                     <img id="main-image" src="/uploads/re-image/<%=product.productImage[0]%>" alt="Product Image">
                                 </div>
                                 <div class="slider-nav-thumbnails">
                                     <% for (let i = 0; i < product.productImage.length; i++) { %>
                                         <div class="thumbnail">
                                             <img src="/uploads/re-image/<%=product.productImage[i]%>" alt="Product Image Thumbnail" onclick="changeMainImage('<%=product.productImage[i]%>')">
                                         </div>
                                     <% } %>
                                 </div>
                             </div>
                         </div>
                         <div class="col-md-6 col-sm-12 col-xs-12 pl-5">
                             <div class="detail-info">
                                 <h2 class="title-detail"><%=product.productName%></h2>
                                 <div class="product-detail-rating">
                                     <div class="pro-details-brand">
                                         <span>Brands: <a href="#"><%=product.brand%></a></span>
                                     </div>
                                     <div class="product-rate-cover text-end">
                                         <div class="product-rate d-inline-block">
                                             <div class="product-rating" style="width:90%"></div>
                                         </div>
                                         <span class="font-small ml-5 text-muted">(25 reviews)</span>
                                     </div>
                                 </div>
                                 <div class="clearfix product-price-cover">
                                     <div class="product-price primary-color float-left">
                                         <ins><span class="text-brand"><%=product.salePrice%></span></ins>
                                         <ins><span class="old-price font-md ml-15"><%=product.regularPrice%></span></ins>
                                         <span class="save-price font-md color3 ml-15">
                                            <% if (!totalOffer) { %> 
                                            No Offers
                                            <% } else { %>
                                                <%=totalOffer%> % Offer
                                            <% } %>
                                       </span>
                                     </div>
                                 </div>
                                 <div class="bt-1 border-color-1 mt-1 mb-1"></div>
                                 <div class="short-desc mt-3 mb-3">
                                     <h3 class="desc-title">Product Description</h3>
                                     <p><%=product.description%></p>
                                 </div>
                                 <div class="product_sort_info font-xs mb-3">
                                     <ul>
                                         <li class="mb-10"><i class="fi-rs-crown mr-5"></i> 1 Year Brand Warranty</li>
                                         <li class="mb-10"><i class="fi-rs-refresh mr-5"></i> 30 Day Return Policy</li>
                                         <li><i class="fi-rs-credit-card mr-5"></i> Cash on Delivery available</li>
                                     </ul>
                                 </div>
                                 <div class="bt-1 border-color-1 mt-3 mb-3"></div>
                                 <div class="detail-extralink">
                                     <div class="detail-qty border radius">
                                         <a href="#" class="qty-down"><i class="fi-rs-angle-small-down"></i></a>
                                         <span class="qty-val" id="quantity">1</span>
                                         <a href="#" class="qty-up"><i class="fi-rs-angle-small-up"></i></a>
                                     </div>
                                     <div class="product-extra-link2 mt-3">
                                         <button type="submit" class="button button-add-to-cart">Add to Cart</button>
                                          <a aria-label="Add To Wishlist" class="action-btn hover-up" href="#"><i class="fa-regular fa-heart"></i></a> 
                                     </div>
                                 </div>
                                 <ul class="product-meta font-xs color-grey mt-5">
                                     <li class="mb-3">Tags: <a href="#" rel="tag"><%=category.name%></a></li>
                                     <li>Availability:<span class="in-stock text-success ml-5"><%=quantity%> Items in stock</span></li>
                                 </ul>
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 </section>
 
<section class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <ul class="filter__controls">
          <li class="active" data-filter=".new-arrivals">Similar Products</li>
        </ul>
      </div>
    </div>

    <div class="row product__filter">
      <% if (similarProducts && similarProducts.length > 0) { %>
        <% similarProducts.forEach(product => { %>
          <div class="col-lg-3 col-md-4 col-12 col-sm-6 mix new-arrivals">
            <div class="product-cart-wrap mb-30">
              <div class="product-img-action-wrap">
                <div class="product-img product-img-zoom">
                  <a href="/productdetails?id=<%= product._id %>">
                    <img class="default-img" src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                  </a>
                </div>
                <a href="#" class="wishlist-btn" aria-label="Add to wishlist">
                  <i class="fas fa-heart"></i>
                </a>
              </div>
              <div class="product-content-wrap">
                <h6><%= product.productName %></h6>
                <h5>₹<%= product.salePrice %></h5>
                <a href="#">Add to cart</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <p class="text-danger">No similar products found.</p>
        </div>
      <% } %>
    </div>
  </div>
</section>

</main>


<script>
    // Function to change the main image when a thumbnail is clicked
function changeMainImage(imageSrc) {
    // Update the source of the main image
    document.getElementById("main-image").src = "/uploads/re-image/" + imageSrc;
}

// Function to enable zoom effect on the main image
let zoomImg = document.getElementById("main-image");

zoomImg.addEventListener('mousemove', function(e) {
    let zoomLens = document.createElement('div');
    zoomLens.style.position = "absolute";
    zoomLens.style.width = "150px";
    zoomLens.style.height = "150px";
    zoomLens.style.border = "3px solid #fff";
    zoomLens.style.borderRadius = "50%";
    zoomLens.style.pointerEvents = "none";
    zoomLens.style.backgroundSize = "300% 300%";
    zoomLens.style.backgroundImage = `url(${zoomImg.src})`;

    zoomLens.style.left = e.pageX - zoomImg.offsetLeft - zoomLens.offsetWidth / 2 + "px";
    zoomLens.style.top = e.pageY - zoomImg.offsetTop - zoomLens.offsetHeight / 2 + "px";

    //zoomImg.parentElement.appendChild(zoomLens);

    zoomImg.addEventListener('mouseout', () => {
        zoomLens.remove();
    });
});

</script>

