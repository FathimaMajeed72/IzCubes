<%- include("../../views/partials/user/header") %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    /* General Layout */
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        background-color: #fafbfc;
        color: #1a1d29;
        line-height: 1.6;
        margin: 0;
        padding: 0;
    }

    .main {
        padding: 40px 0;
    }

    /* Breadcrumb Styling */
    .breadcrumb-wrap {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px 0;
        margin-bottom: 40px;
    }

    .breadcrumb {
        color: white;
        font-size: 14px;
    }

    .breadcrumb a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .breadcrumb a:hover {
        color: white;
    }

    .breadcrumb span {
        color: white;
        font-weight: 500;
    }

    /* Product Card Container */
    .product-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        margin-bottom: 40px;
    }

    /* Image Gallery */
    .image-gallery {
        position: relative;
        background: #f8f9fa;
        padding: 30px;
    }

    .main-image-container {
        position: relative;
        overflow: hidden;
        border-radius: 16px;
        background: white;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .main-image {
        width: 100%;
        height: 500px;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .main-image:hover {
        transform: scale(1.05);
    }

    /* Thumbnails */
    .thumbnail-container {
        display: flex;
        gap: 12px;
        margin-top: 20px;
        overflow-x: auto;
        padding: 8px 0;
    }

    .thumbnail {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        overflow: hidden;
        cursor: pointer;
        border: 3px solid transparent;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }

    .thumbnail:hover {
        border-color: #667eea;
        transform: translateY(-2px);
    }

    .thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Product Info Section */
    .product-info {
        padding: 40px;
    }

    .product-title {
        font-size: 32px;
        font-weight: 700;
        color: #1a1d29;
        margin-bottom: 16px;
        line-height: 1.2;
    }

    /* Brand and Rating */
    .brand-rating-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        padding-bottom: 20px;
        border-bottom: 1px solid #e9ecef;
    }

    .brand-info {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .brand-label {
        font-size: 14px;
        color: #6c757d;
        font-weight: 500;
    }

    .brand-name {
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        font-size: 16px;
    }

    .rating-section {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .stars {
        display: flex;
        gap: 2px;
    }

    .star {
        color: #ffc107;
        font-size: 16px;
    }

    .rating-text {
        font-size: 14px;
        color: #6c757d;
    }

    /* Price Section */
    .price-section {
        background: linear-gradient(135deg, #f8f9ff 0%, #e3e7ff 100%);
        padding: 24px;
        border-radius: 16px;
        margin-bottom: 32px;
    }

    .current-price {
        font-size: 36px;
        font-weight: 800;
        color: #2d3748;
        margin-bottom: 8px;
    }

    .price-details {
        display: flex;
        align-items: center;
        gap: 16px;
        flex-wrap: wrap;
    }

    .original-price {
        font-size: 20px;
        color: #a0aec0;
        text-decoration: line-through;
    }

    .discount-badge {
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

    /* Description */
    .description-section {
        margin-bottom: 32px;
    }

    .section-title {
        font-size: 20px;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 16px;
    }

    .description-text {
        font-size: 16px;
        color: #4a5568;
        line-height: 1.7;
    }

    /* Features List */
    .features-list {
        background: #f7fafc;
        padding: 24px;
        border-radius: 12px;
        margin-bottom: 32px;
    }

    .features-list ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .features-list li {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 8px 0;
        font-size: 15px;
        color: #4a5568;
    }

    .features-list i {
        color: #48bb78;
        width: 20px;
    }

    /* Size and Stock Selection */
    .selection-section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
        margin-bottom: 32px;
    }

    .size-selector, .stock-info {
        background: white;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 20px;
    }

    .selector-label {
        font-size: 16px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 12px;
    }

    .size-select {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 15px;
        background: white;
        cursor: pointer;
        transition: border-color 0.3s ease;
    }

    .size-select:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .stock-display {
        font-size: 18px;
        font-weight: 600;
        color: #48bb78;
    }

    /* Action Section */
    .action-section {
        display: flex;
        align-items: center;
        gap: 20px;
        flex-wrap: wrap;
        padding-top: 24px;
        border-top: 1px solid #e2e8f0;
    }

    .quantity-selector {
        display: flex;
        align-items: center;
        background: white;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        overflow: hidden;
    }

    .qty-btn {
        background: none;
        border: none;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background-color 0.3s ease;
        color: #667eea;
    }

    .qty-btn:hover {
        background-color: #f7fafc;
    }

    .qty-display {
        width: 60px;
        text-align: center;
        font-size: 18px;
        font-weight: 600;
        color: #2d3748;
    }

    .add-to-cart-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 14px 32px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        flex: 1;
        min-width: 180px;
    }

    .add-to-cart-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    .wishlist-btn {
        background: linear-gradient(135deg, #fc8181 0%, #f56565 100%);
        color: white;
        border: none;
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-decoration: none;
    }

    .wishlist-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(252, 129, 129, 0.3);
        color: white;
    }

    /* Product Meta */
    .product-meta {
        margin-top: 24px;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
    }

    .meta-list {
        display: flex;
        gap: 24px;
        flex-wrap: wrap;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .meta-item {
        font-size: 14px;
        color: #6c757d;
    }

    .meta-item a {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
    }

    /* Similar Products */
    .similar-products {
        background: white;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        padding: 40px;
    }

    .similar-products h4 {
        font-size: 28px;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 32px;
    }

    .product-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }

    .product-card-image {
        position: relative;
        overflow: hidden;
        height: 250px;
    }

    .product-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .product-card:hover .product-card-image img {
        transform: scale(1.1);
    }

    .card-wishlist-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        background: rgba(255, 255, 255, 0.9);
        color: #fc8181;
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .card-wishlist-btn:hover {
        background: white;
        color: #f56565;
        transform: scale(1.1);
    }

    .product-card-content {
        padding: 24px;
    }

    .product-card-title {
        font-size: 16px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 8px;
        line-height: 1.4;
    }

    .product-card-price {
        font-size: 18px;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 16px;
    }

    .product-card-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .product-card-btn:hover {
        transform: translateY(-2px);
        color: white;
    }

    .truncated-text {
      white-space: nowrap;         
      overflow: hidden;            
      text-overflow: ellipsis;    
      display: block;
      max-width: 230px;         
      cursor: pointer;
    }
    .product-brand {
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 12px;
        font-weight: 500;
    }


    /* Responsive Design */
    @media (max-width: 992px) {
        .selection-section {
            grid-template-columns: 1fr;
        }
        
        .action-section {
            flex-direction: column;
            align-items: stretch;
        }
        
        .add-to-cart-btn {
            min-width: auto;
        }
    }

    @media (max-width: 768px) {
        .product-info {
            padding: 24px;
        }
        
        .image-gallery {
            padding: 20px;
        }
        
        .main-image {
            height: 350px;
        }
        
        .product-title {
            font-size: 24px;
        }
        
        .current-price {
            font-size: 28px;
        }
        
        .brand-rating-section {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }
    }
</style>

<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/">Home </a>
                <% if (from === 'shop') { %>
                    > <a href="/shop"> Shop </a>
                <% } %>
                > <span> <%= product.productName %> </span>
            </div>
        </div>
    </div>

    <section class="container">
        <div class="product-container">
            <div class="row g-0">
                <!-- Left: Product Gallery -->
                <div class="col-lg-6">
                    <div class="image-gallery">
                        <div class="main-image-container">
                            <img id="main-image" src="/uploads/re-image/<%= product.productImage[0] %>" class="main-image" alt="<%= product.productName %>">
                        </div>
                        
                        <div class="thumbnail-container">
                            <% product.productImage.forEach(img => { %>
                                <div class="thumbnail" onclick="changeMainImage('<%= img %>')">
                                    <img src="/uploads/re-image/<%= img %>" alt="Product thumbnail">
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <!-- Right: Product Info -->
                <div class="col-lg-6">
                    <div class="product-info">
                        <h1 class="product-title"><%= product.productName %></h1>

                        <div class="brand-rating-section">
                            <div class="brand-info">
                                <span class="brand-label">Brand:</span>
                                <a href="#" class="brand-name"><%= product.brand %></a>
                            </div>
                            <div class="rating-section">
                                <div class="stars">
                                    <i class="fas fa-star star"></i>
                                    <i class="fas fa-star star"></i>
                                    <i class="fas fa-star star"></i>
                                    <i class="fas fa-star star"></i>
                                    <i class="fas fa-star star"></i>
                                </div>
                                <span class="rating-text">(25 reviews)</span>
                            </div>
                        </div>

                        <div class="price-section">
                            <div class="current-price">₹<%= product.salePrice %></div>
                            <div class="price-details">
                                <span class="original-price">₹<%= product.regularPrice %></span>
                                <% if (offer) { %>
                                    <span class="discount-badge"><%= offer %>% Off</span>
                                <% } else { %>
                                    <span class="discount-badge">No Offers</span>
                                <% } %>
                            </div>
                        </div>

                        <div class="description-section">
                            <h3 class="section-title">Product Description</h3>
                            <p class="description-text"><%= product.description %></p>
                        </div>

                        <div class="features-list">
                            <ul>
                                <li><i class="fas fa-shield-alt"></i> 1 Year Brand Warranty</li>
                                <li><i class="fas fa-undo-alt"></i> 30 Day Return Policy</li>
                                <li><i class="fas fa-truck"></i> Cash on Delivery available</li>
                            </ul>
                        </div>

                        <div class="selection-section">
                            <div class="size-selector">
                                <label class="selector-label">Select Size:</label>
                                <select class="size-select" id="sizeSelect" name="size" required>
                                    <option value="" selected disabled>Choose a size</option>
                                    <% product.sizes.forEach(item => { %>
                                        <option value="<%= item.size %>" <%= item.quantity === 0 ? 'disabled' : '' %>>
                                            <%= item.size %> years (<%= item.quantity %>) <%= item.quantity === 0 ? '(Out of stock)' : '' %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="stock-info">
                                <div class="selector-label">Total Stock Available:</div>
                                <div class="stock-display"><%= totalStock %> items</div>
                            </div>
                        </div>

                        <div class="action-section">
                            

                            <form id="add-to-cart-form" class="d-flex flex-grow-1">
                                <input type="hidden" name="productId" value="<%= product._id %>">
                                <input type="hidden" name="quantity" id="cartQty" value="1">
                                <input type="hidden" name="selectedSize" id="selectedSize">
                                <button type="submit" class="add-to-cart-btn">
                                    <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                                </button>
                            </form>

                          
                            <button class="wishlist-btn" onclick="addToWishlist('<%= product._id %>',this)" aria-label="Toggle wishlist">
                                     <i class="<%= user.wishlist.includes(product._id.toString()) ? 'fas text-danger' : 'far' %> fa-heart"></i>
                            </button>
                        </div>

                        <div class="product-meta">
                            <ul class="meta-list">
                                <li class="meta-item">Tags: <a href="#"><%= category.name %></a></li>
                                <li class="meta-item">Availability: <span class="text-success"><%= quantity %> in stock</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Similar Products Section -->
    <section class="container">
        <div class="similar-products">
            <h4>Similar Products</h4>
            <div class="row g-4">
                <% if (similarProducts && similarProducts.length > 0) { %>
                    <% similarProducts.forEach(product => { %>
                        <div class="col-md-6 col-lg-3">
                            <div class="product-card">
                                <div class="product-card-image">
                                    <a href="/productdetails?id=<%= product._id %>">
                                        <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                                    </a>
                                    
                                    <button class="card-wishlist-btn" onclick="addToWishlist('<%= product._id %>',this)" aria-label="Toggle wishlist">
                                     <i class="<%= user.wishlist.includes(product._id.toString()) ? 'fas text-danger' : 'far' %> fa-heart"></i>
                                    </button>
                                </div>
                                <div class="product-card-content">
                                    <h6 class="product-card-title truncated-text" title="<%= product.productName %>"><%= product.productName %></h6>
                                    <div class="product-brand">
                                        <i class="fas fa-tag me-1"></i>Brand: <%= product.brand %>
                                    </div>
                                    <div class="product-card-price">₹<%= product.salePrice %></div>
                                    <a href="/productdetails?id=<%= product._id %>" class="product-card-btn">
                                        <i class="fas fa-shopping-cart me-1"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-12">
                        <p class="text-muted">No similar products found.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const cartQty = document.getElementById("cartQty");
        const sizeSelect = document.getElementById('sizeSelect');
        const hiddenSelectedSize = document.getElementById('selectedSize');
        const form = document.getElementById("add-to-cart-form");
        const productId = document.querySelector("input[name='productId']").value;

        cartQty.value = 1;

        sizeSelect.addEventListener('change', function () {
            hiddenSelectedSize.value = this.value;
        });

        form.addEventListener("submit", async function (e) {
            e.preventDefault();

            const selectedSize = sizeSelect.value;
            if (!selectedSize) {
                return Swal.fire({
                    icon: 'warning',
                    title: 'Select Size',
                    text: 'Please select a size before adding to cart.',
                });
            }

            try {
                const response = await fetch("/addToCart", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        productId: productId,
                        selectedSize: selectedSize
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    Swal.fire({
                        icon: "success",
                        title: "Added to Cart",
                        text: data.message || "Product added successfully",
                        timer: 1500,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.href = "/cart";
                    });
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Cannot Add to Cart",
                        text: data.message || "Something went wrong"
                    });
                }
            } catch (err) {
                Swal.fire({
                    icon: "error",
                    title: "Server Error",
                    text: "Could not add item to cart. Please try again later."
                });
            }
        });
    });

    function changeMainImage(imageSrc) {
        document.getElementById("main-image").src = "/uploads/re-image/" + imageSrc;
    }
</script>

<script>
    function addToWishlist(productId, button) {
        $.ajax({
            url: "/addToWishlist",
            method: "POST",
            data: { productId: productId },
            success: (response) => {
                const icon = button.querySelector('i');

                if (response.status === 'added') {
                    icon.classList.remove('far');
                    icon.classList.add('fas', 'text-danger');

                    Swal.fire({
                        title: 'Added to wishlist',
                        text: response.message,
                        icon: 'success',
                        timer: 500,
                        showConfirmButton: false
                    });
                } else if (response.status === 'removed') {
                    icon.classList.remove('fas', 'text-danger');
                    icon.classList.add('far');

                    Swal.fire({
                        title: 'Removed from wishlist',
                        text: response.message,
                        icon: 'info',
                        timer: 500,
                        showConfirmButton: false
                    });
                }
            },
            error: (error) => {
                Swal.fire({
                    title: 'Error',
                    text: 'There is an error adding the product to your wishlist',
                    icon: 'error',
                    timer: 2000,
                    showConfirmButton: false
                });
            }
        });
    }
</script>

