<script>
    function confirmRemove(productId) {
        Swal.fire({
            title: 'Remove from Wishlist?',
            text: 'This item will be removed from your wishlist.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#f56565',
            cancelButtonColor: '#667eea',
            confirmButtonText: 'Yes, remove it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/removeFromWishlist?productId=${productId}`;
            }
        });
    }
</script>
<script>
  function openSizeModal(button) {
    const productId = button.dataset.productId;
    const sizes = JSON.parse(button.dataset.sizes);
    document.getElementById("modalProductId").value = productId;

    const sizeOptions = document.getElementById("sizeOptions");
    sizeOptions.innerHTML = "";

    sizes.forEach(sizeObj => {
      const label = document.createElement("label");
      label.className = "btn btn-outline-secondary";
      label.innerHTML = `
        <input type="radio" name="selectedSize" value="${sizeObj.size}" required />
        ${sizeObj.size} (${sizeObj.quantity} left)
      `;
      sizeOptions.appendChild(label);
    });
  }
</script>
<script>
  document.getElementById("addToCartForm").addEventListener("submit", async function(e) {
    e.preventDefault();

    const productId = document.getElementById("modalProductId").value;
    const selectedSize = document.querySelector('input[name="selectedSize"]:checked');

    if (!selectedSize) {
      Swal.fire({
        icon: "warning",
        title: "Please select a size",
        timer: 1500,
        showConfirmButton: false
      });
      return;
    }

    try {
        console.log({ productId, selectedSize: selectedSize.value });

      const response = await fetch("/addToCart", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          productId,
          selectedSize: selectedSize.value
        })
      });

      const result = await response.json();
      console.log(result);
      console.log("Fetch status:", response.status);


      if (response.ok) {

        const modalEl = document.getElementById("sizeModal");
        

        if (modalEl && typeof bootstrap !== "undefined") {
        let modalInstance;

        if (bootstrap.Modal.getOrCreateInstance) {
            modalInstance = bootstrap.Modal.getOrCreateInstance(modalEl);
        } else {
            modalInstance = new bootstrap.Modal(modalEl); 
        }

        modalInstance.hide();
        }

        Swal.fire({
          icon: "success",
          title: "Added to Cart",
          text: result.message,
          timer: 1500,
          showConfirmButton: false
        }).then(() => {
            window.location.href = "/cart";
        });


      } else {
        Swal.fire({
          icon: "error",
          title: "Error",
          text: result.message || "Unable to add product to cart"
        });
      }
    } catch (error) {
      console.error("Add to cart error:", error);
      console.error("Fetch error:", error);
      Swal.fire({
        icon: "error",
        title: "Error",
        text: error.message || "Something went wrong"
      });
    }
  });
</script>
