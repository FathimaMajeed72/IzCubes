</style>

<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                <span>></span><a href="/shop" rel="nofollow">Shop</a>
                <span>></span> Wishlist
            </div>
        </div>
    </div>

    <section class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="wishlist-container">
                    <div class="wishlist-header">
                        <h2 class="wishlist-title">
                            <i class="fas fa-heart"></i>
                            My Wishlist
                        </h2>
                    </div>
                    
                    <div class="wishlist-table-container">
                        <div class="table-responsive">
                            <table class="table shopping-summery text-center clean">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Product</th>
                                        <th scope="col">Details</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Add to Cart</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (wishlist.length > 0) { %>
                                        <% for (let product of wishlist) { %>
                                            <tr>
                                                <td class="image product-thumbnail">
                                                    <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>" />
                                                </td>
                                                <td class="product-des product-name text-start">
                                                    <h5 class="product-name">
                                                        <a href="/productdetails?id=<%= product._id %>">
                                                            <%= product.productName %>
                                                        </a>
                                                    </h5>
                                                    <p class="font-xs">
                                                        <%= product.category.name %><br />
                                                        <%= product.brand %>
                                                    </p>
                                                </td>
                                                <td class="price" data-title="Price">
                                                    ₹<span><%= product.salePrice %></span>
                                                </td>
                                                <td class="text-center" data-title="Add to Cart">
                                                    <!-- <a href="/addToCart" onclick="" class="btn btn-primary">
                                                        <i class="fas fa-shopping-cart"></i>
                                                        Add to Cart
                                                    </a> -->
                                                    <div class="d-flex justify-content-center align-items-center">
                                                        <button class="add-to-cart-btn" data-bs-toggle="modal" data-bs-target="#sizeModal" data-product-id="<%= product._id %>" data-sizes='<%- JSON.stringify(product.sizes) %>' onclick="openSizeModal(this)">
                                                            <i class="fas fa-shopping-cart"></i>
                                                            Add to Cart
                                                        </button>
                                                    </div>
                                                </td>
                                                <td class="action" data-title="Remove">
                                                    <div class="d-flex justify-content-center align-items-center">
                                                        <a class="btn" href="#" onclick="confirmRemove('<%= product._id %>')">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="empty-wishlist">
                                                <i class="fas fa-heart-broken"></i>
                                                <p class="lead mb-4">Your wishlist is empty</p>
                                                <a href="/shop" class="btn">
                                                    <i class="fas fa-shopping-bag"></i>
                                                    Start Shopping
                                                </a>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

         <!-- Size Selection Modal -->
        <div class="modal fade" id="sizeModal" tabindex="-1" aria-labelledby="sizeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form id="addToCartForm">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="sizeModalLabel">Select Size</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                <input type="hidden" name="productId" id="modalProductId">
                <div id="sizeOptions" class="d-flex flex-wrap gap-2"></div>
                </div>
                
                <div class="modal-footer justify-content-center">
                <button type="submit" class="btn btn-primary">Add to Cart</button>
                </div>
            </div>
            </form>
        </div>
        </div>


    </section>
</main>

