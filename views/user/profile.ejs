      flex-direction: column;
      align-items: stretch;
      flex-wrap: wrap; /* Allow wrapping on very small screens */
    }
    
    .order-info,
    .order-status-amount {
      flex-direction: column;
      gap: 10px;
    }
    
    .order-detail-item {
      gap: 8px;
    }
    
    .order-detail-icon {
      width: 35px;
