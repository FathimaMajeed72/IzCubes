<script>
  function deleteAddress(addressId) {
    if (confirm('Are you sure you want to delete this address?')) {
      fetch(`/deleteAddress/${addressId}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        }
      })
      .then(res => res.json().then(data => ({ ok: res.ok, body: data })))
      .then(({ ok, body }) => {
        if (ok) {
          alert(body.message || "Address deleted successfully");
          location.reload();
        } else {
          alert(body.message || "Failed to delete address");
        }
      })
      .catch(err => {
        console.error('Error deleting address:', err);
         alert("Server error occurred. Please try again.");
      });
    }
  }
</script>
<script>
  const defaultProfileImage = "/img/defaultProfileImage.jpg";

  document.addEventListener("DOMContentLoaded", () => {
  const imageInput = document.getElementById("editProfileImage");
  const previewImage = document.getElementById("previewImage");
  const removeImageInput = document.getElementById("removeImageInput");
  const removeImageLink = document.getElementById("removeProfileImage");

  imageInput?.addEventListener("change", function (event) {
    const file = event.target.files[0];
    if (file) {
      previewImage.src = URL.createObjectURL(file);
      removeImageInput.value = "false"; // Do not remove if new image selected
    }
  });

  // Reset image to default on "Remove" button click
  removeImageLink?.addEventListener("click", function (event) {
    event.preventDefault(); 
    previewImage.src = defaultProfileImage;
    imageInput.value = ""; 
    removeImageInput.value = "true"; 
    console.log("Remove image flag set:", removeImageInput.value);
  });
});
</script>

<script>
  const urlParams = new URLSearchParams(window.location.search);
  const emailVerified = urlParams.get('emailVerified') === 'true';
  const emailUpdated = urlParams.get('emailUpdated') === 'true';

  if (emailVerified && emailUpdated) {
    Swal.fire({
      icon: 'success',
      title: 'Email Verified!',
      text: 'Your new email has been verified successfully.',
      confirmButtonColor: '#3085d6',
      confirmButtonText: 'Continue'
    }).then(() => {
      Swal.fire({
        icon: 'success',
        title: 'Email Updated!',
        text: 'Your email address has been successfully updated.',
        confirmButtonColor: '#3085d6',
        confirmButtonText: 'OK'
      });

      // Optionally clean the URL
      if (history.pushState) {
        const newUrl = window.location.protocol + "//" + window.location.host + window.location.pathname;
        window.history.pushState({ path: newUrl }, '', newUrl);
      }
    });
  }
</script>

