  @media (max-width: 992px) {
    .sidebar {
      position: static;
      margin-bottom: 20px;
    }

    .content-container {
      margin-top: 0;
    }
  }

  @media (max-width: 768px) {
    .content-header {
      padding: 20px;
      flex-direction: column;
      gap: 15px;
      align-items: flex-start;
    }

    .content-body {
      padding: 20px;
    }

    .profile-detail-item {
      flex-direction: column;
      align-items: flex-start;
