<%- include("../../views/partials/user/header") %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
  /* General Layout */
  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background-color: #fafbfc;
    color: #1a1d29;
    line-height: 1.6;
    margin: 0;
    padding: 0;
  }

  /* Breadcrumb Styling */
  .page-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px 0;
    margin-bottom: 40px;
  }

  .breadcrumb {
    color: white;
    font-size: 14px;
    margin: 0;
    padding: 0 20px;
  }

  .breadcrumb a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .breadcrumb a:hover {
    color: white;
  }

  .breadcrumb span {
    color: white;
    margin: 0 8px;
  }

  /* Sidebar Styling */
  .sidebar {
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    padding: 30px;
    height: fit-content;
    position: sticky;
    top: 100px;
  }

  .profile-header {
    text-align: center;
    margin-bottom: 30px;
    padding-bottom: 25px;
    border-bottom: 2px solid #f1f5f9;
  }

  .profile-image {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 50%;
    margin-bottom: 15px;
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.2);
    border: 4px solid white;
  }

  .profile-name {
    font-size: 20px;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 5px;
  }

  .profile-email {
    color: #6c757d;
    font-size: 14px;
    margin: 0;
  }

  .sidebar-section {
    margin-bottom: 25px;
  }

  .sidebar-section h6 {
    font-size: 12px;
    font-weight: 700;
    color: #4a5568;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 15px;
    padding-left: 5px;
  }

  .nav-link.sidebar-link {
    color: #4a5568;
    padding: 12px 15px;
    margin: 5px 0;
    border-radius: 12px;
    transition: all 0.3s ease;
    font-weight: 500;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .nav-link.sidebar-link i {
    font-size: 16px;
    width: 20px;
    text-align: center;
  }

  .nav-link.sidebar-link:hover {
    background: linear-gradient(135deg, #f8f9ff 0%, #e3e7ff 100%);
    color: #667eea;
    transform: translateX(5px);
  }

  .nav-link.sidebar-link.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }

  .nav-link.sidebar-link.active:hover {
    transform: none;
  }

  /* Logout Link */
  .nav-link:not(.sidebar-link) {
    color: #f56565;
    padding: 12px 15px;
    margin: 5px 0;
    border-radius: 12px;
    transition: all 0.3s ease;
    font-weight: 500;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .nav-link:not(.sidebar-link):hover {
    background: rgba(245, 101, 101, 0.1);
    color: #e53e3e;
  }

  /* Content Section */
  .content-container {
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    overflow: hidden;
  }

  .content-header {
    background: linear-gradient(135deg, #f8f9ff 0%, #e3e7ff 100%);
    padding: 30px 40px;
    border-bottom: 1px solid #e9ecef;
    display: flex;
    align-items: center;
    justify-content: between;
  }

  .content-title {
    font-size: 24px;
    font-weight: 700;
    color: #2d3748;
    margin: 0;
    flex-grow: 1;
  }

  .edit-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 10px 20px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .edit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    color: white;
  }

  .content-body {
    padding: 40px;
  }

  /* Profile Details */
  .profile-detail-item {
    padding: 20px 0;
    border-bottom: 1px solid #f1f5f9;
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .profile-detail-item:last-child {
    border-bottom: none;
  }

  .profile-detail-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #e3e7ff 0%, #f8f9ff 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #667eea;
    font-size: 18px;
  }

  .profile-detail-content {
    flex-grow: 1;
  }

  .profile-detail-label {
    font-size: 12px;
    font-weight: 600;
    color: #6c757d;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 5px;
  }

  .profile-detail-value {
    font-size: 16px;
    font-weight: 600;
    color: #2d3748;
    margin: 0;
  }

  /* Action Buttons */
  .action-buttons {
    margin-top: 30px;
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
  }

  .action-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 12px 24px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .action-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    color: white;
  }

  /* Address Cards */
  .address-card {
    background: #f8f9fa;
    border: 2px solid #e9ecef;
    border-radius: 15px;
    padding: 25px;
    margin-bottom: 20px;
    transition: all 0.3s ease;
  }

  .address-card:hover {
    border-color: #667eea;
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.1);
  }

  .address-type {
    display: inline-block;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 6px 15px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 15px;
  }

  .address-content {
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .address-name {
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 8px;
  }

  .address-actions {
    display: flex;
    gap: 10px;
    justify-content: flex-end;
  }

  .address-btn {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    border: 2px solid;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    font-size: 14px;
    transition: all 0.3s ease;
  }

  .edit-address-btn {
    border-color: #667eea;
    color: #667eea;
    background: white;
  }

  .edit-address-btn:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
  }

  .delete-address-btn {
    border-color: #f56565;
    color: #f56565;
    background: white;
  }

  .delete-address-btn:hover {
    background: #f56565;
    color: white;
    transform: translateY(-2px);
  }

  .add-address-btn {
    background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
    color: white;
    padding: 12px 24px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .add-address-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(72, 187, 120, 0.3);
    color: white;
  }

  /* Orders Section Specific Styles - MODIFIED */
  .orders-list {
    display: flex;
    flex-direction: column;
    gap: 25px;
  }

  .order-card {
    background: #f8f9fa;
    border: 2px solid #e9ecef;
    border-radius: 15px;
    padding: 30px;
    transition: all 0.3s ease;
  }

  .order-card:hover {
    border-color: #667eea;
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.1);
    transform: translateY(-2px);
  }

 
  .order-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 25px;
    padding-bottom: 20px;
    border-bottom: 2px solid #e9ecef;
    flex-wrap: nowrap; 
    gap: 15px; 
    min-width: 0; 
  }

  .order-info {
    display: flex;
    gap: 20px; 
    flex-wrap: nowrap;
    flex: 1;
    min-width: 0; 
  }

  .order-status-amount {
    display: flex;
    gap: 20px; 
    align-items: flex-start;
    flex-wrap: nowrap; 
    flex-shrink: 0; 
  }

  .order-detail-item {
    display: flex;
    align-items: center;
    gap: 10px; 
    min-width: 0; 
    flex-shrink: 1; 
  }

  .order-detail-icon {
    width: 40px; 
    height: 40px; 
    background: linear-gradient(135deg, #e3e7ff 0%, #f8f9ff 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #667eea;
    font-size: 14px; 
    flex-shrink: 0; 
  }

  .order-detail-content {
    flex-grow: 1;
    min-width: 0; 
  }

  .order-detail-value {
    font-size: 14px; 
    font-weight: 600;
    color: #2d3748;
    margin: 0;
    white-space: nowrap; 
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Override profile-detail-label for orders section */
  .order-header .profile-detail-label {
    font-size: 11px; /* Slightly smaller */
    font-weight: 600;
    color: #6c757d;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 3px; /* Reduced margin */
    white-space: nowrap; /* Prevent label wrapping */
  }

  .order-total {
    font-size: 16px; /* Slightly smaller */
    font-weight: 700;
    color: #2d3748;
    margin: 0;
    white-space: nowrap; /* Prevent amount wrapping */
  }

  .status-badge {
    padding: 6px 12px; /* Slightly smaller padding */
    border-radius: 20px;
    font-size: 11px; /* Slightly smaller */
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: inline-block;
    white-space: nowrap; /* Prevent status wrapping */
  }

  .order-items {
    background: white;
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .product-item {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 15px;
    border-radius: 10px;
    margin-bottom: 15px;
    background: #f8f9fa;
    transition: all 0.3s ease;
  }

  .product-item:last-child {
    margin-bottom: 0;
  }

  .product-item:hover {
    background: #e3e7ff;
    transform: translateX(5px);
  }

  .product-item.product-error {
    border: 2px solid #f56565;
    background: #fed7d7;
  }

  .product-image {
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    flex-shrink: 0;
  }

  .product-details {
    flex-grow: 1;
    min-width: 0;
  }

  .product-name {
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 8px;
    font-size: 16px;
  }

  .product-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    color: #6c757d;
    font-size: 14px;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .order-actions {
    display: flex;
    justify-content: flex-end;
    padding-top: 15px;
    border-top: 1px solid #e9ecef;
  }
  .retry-btn{

    color: white;
    padding: 12px 24px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;

  }

  .retry-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    color: white;
  }

  .view-order-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 12px 24px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .view-order-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    color: white;
  }

  .search-form {
    background: linear-gradient(135deg, #f8f9ff 0%, #e3e7ff 100%);
    border: 2px solid #e3e7ff;
    padding: 25px;
    border-radius: 15px;
    margin-bottom: 30px;
  }

  .search-form .form-control {
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    padding: 12px 15px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .search-form .form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.1);
    transform: translateY(-1px);
  }

  .search-btn {
    background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 10px;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .search-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(72, 187, 120, 0.3);
    color: white;
  }

  .dropdown-wrapper {
    position: relative;
    z-index: 10;
  }

  .dropdown-select {
    position: relative;
    z-index: 11;
  }

  .dropdown-select:focus,
  .dropdown-select:active {
    z-index: 1000 !important;
    position: relative;
  }

  select.form-control:focus {
    z-index: 1000 !important;
  }

  /* Pagination Improvements */
  .pagination .page-link {
    color: #667eea;
    font-weight: 600;
    border: 2px solid #e2e8f0;
    transition: all 0.3s ease;
  }

  .pagination .page-link:hover {
    background: #667eea;
    border-color: #667eea;
    color: white;
    transform: translateY(-2px);
  }

  .pagination .page-item.active .page-link {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-color: #667eea;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }

  /* Empty State Improvements */
  .empty-state {
    text-align: center;
    padding: 80px 20px;
    color: #6c757d;
  }

  .empty-state i {
    font-size: 80px;
    color: #e2e8f0;
    margin-bottom: 25px;
    display: block;
  }

  .empty-state .lead {
    font-size: 24px;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 15px;
  }

  .empty-state p {
    font-size: 16px;
    margin-bottom: 30px;
  }

  .coupon-card {
  background-color: #f1f5ff;
  padding: 1rem;
  border-radius: 12px;
  margin-bottom: 1rem;
  border-left: 5px solid #667eea;
}

.coupon-card.used {
  opacity: 0.6;
  border-left-color: #ccc;
}


  /* Responsive Design - MODIFIED for single line order headers */
