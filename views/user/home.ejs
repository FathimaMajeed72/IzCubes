              </div>
          </div>
      </div>
  </div>
</section>

 <!-- Product Section -->
    <section class="product">
        <div class="container">
            <!-- Product Header -->
            <div class="product-header">
                <h2>
                    <i class="fas fa-gems"></i>
                    Featured Products
                </h2>
                <p>Discover our handpicked selection of the finest children's fashion</p>
            </div>
            
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li class="active" data-filter=".new-arrivals">
                            <i class="fas fa-sparkles me-2"></i>New Arrivals
                        </li>
                    </ul>
                </div>
            </div>
            
            <div class="product__filter">
                <% if (products && products.length > 0) { %>
                    <% for(let i = 0; i < products.length; i++) { %>
                        <div class="product-cart-wrap">
                            <div class="product-img-action-wrap">
                                <div class="product-img">
                                    <a href="/productdetails?id=<%=products[i]._id%>&from=home">
                                        <img src="/uploads/re-image/<%=products[i].productImage[0]%>" alt="<%=products[i].productName%>">
                                    </a>
                                </div>
                                <a href="#" class="wishlist-btn" onclick="addToWishlist('<%=products[i]._id%>')" aria-label="Add to wishlist">
                                    <i class="fas fa-heart"></i>
                                </a>
                            </div>

                            <div class="product-content-wrap">
                               
                                <h6 ><%=products[i].productName%></h6>
                                <h5><%=products[i].salePrice.toLocaleString('en-IN')%></h5>
                                <a href="#" onclick="addToCart('<%=products[i]._id%>')">
                                    <i class="fas fa-shopping-cart"></i>
                                    Add to cart
                                </a>
                            </div>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="no-products">
                        <i class="fas fa-box-open"></i>
                        <h3>No Products Available</h3>
                        <p>We're currently updating our inventory. Please check back soon for amazing deals!</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>





