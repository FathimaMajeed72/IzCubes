<script>
  const sizeModal = document.getElementById('sizeModal');

  sizeModal.addEventListener('show.bs.modal', function (event) {
    const button = event.relatedTarget; // Button that triggered the modal
    const productId = button.getAttribute('data-product-id');
    const sizes = JSON.parse(button.getAttribute('data-sizes'));

    document.getElementById("modalProductId").value = productId;

    const sizeOptions = document.getElementById("sizeOptions");
    sizeOptions.innerHTML = "";

    sizes.forEach(sizeObj => {
      const label = document.createElement("label");
      label.className = "btn btn-outline-secondary";
      label.innerHTML = `
        <input type="radio" name="selectedSize" value="${sizeObj.size}" required />
        ${sizeObj.size} (${sizeObj.quantity} left)
      `;
      sizeOptions.appendChild(label);
    });
  });
</script>
<script>
    function addToWishlist(productId, button) {
        $.ajax({
            url: "/addToWishlist",
            method: "POST",
            data: { productId: productId },
            success: (response) => {
                const icon = button.querySelector('i');

                if (response.status === 'added') {
                    icon.classList.remove('far');
                    icon.classList.add('fas', 'text-danger');

                    Swal.fire({
                        title: 'Added to wishlist',
                        text: response.message,
                        icon: 'success',
                        timer: 500,
                        showConfirmButton: false
                    });
                } else if (response.status === 'removed') {
                    icon.classList.remove('fas', 'text-danger');
                    icon.classList.add('far');

                    Swal.fire({
                        title: 'Removed from wishlist',
                        text: response.message,
                        icon: 'info',
                        timer: 500,
                        showConfirmButton: false
                    });
                }
            },
            error: (error) => {
                Swal.fire({
                    title: 'Error',
                    text: 'There is an error adding the product to your wishlist',
                    icon: 'error',
                    timer: 2000,
                    showConfirmButton: false
                });
            }
        });
    }
</script>
