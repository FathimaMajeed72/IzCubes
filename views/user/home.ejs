          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          productId,
          selectedSize: selectedSize.value
        })
      });

      const result = await response.json();
      console.log(result);
      console.log("Fetch status:", response.status);


      if (response.ok) {

        const modalEl = document.getElementById("sizeModal");
        

